extends layout.pug
block content
  section#login.fCenter
      h4.errorMessage= errorMessage
      form(action='/login', method='post')
        div.loginInput
          label(for="username") Please enter your username
          input(type='text', name='username')
        .loginInput
          label(for="password") Please enter your password
          input(type='password', name='password')

        button(type='submit' ) Log In
      p(style='margin:50px 0px 20px 0px;') If you do not have an account please create one.   
      .fakeButton
        a(href = 'register') Create an account
      